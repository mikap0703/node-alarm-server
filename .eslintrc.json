{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"],
        "files": ["**/*.ts", "**/*.tsx"]
    },
    "rules": {
        "no-control-regex": 0
    },
    "ignorePatterns": [ "built/*", "node_modules/*", "**/*.json" ]
}
